@model OnlineJobPortal.Models.Login

@{
    ViewBag.Title = "Login";
    var successMessage = TempData["successMessage"]?.ToString();
}

@if (!string.IsNullOrWhiteSpace(successMessage))
{
    <div class="alert alert-success">
        <b>Success: </b>@successMessage
        <button type="button" class="btn-close float-end" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh; background-color: #f8f9fa;">
    <div class="login-container">
        <h2 class="text-center mb-4">Login</h2>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger text-center" })

            
            <div class="form-group mb-3">
                <div class="d-flex justify-content-between align-items-center">
                    @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "form-label me-3" })
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control text-field-right" } })
                </div>
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger mt-2" })
            </div>

            <div class="form-group mb-4">
                <div class="d-flex justify-content-between align-items-center">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "form-label me-3" })
                    @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control text-field-right" } })
                </div>
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger mt-2" })
            </div>

           
            <div class="form-group mb-3">
                <input type="submit" value="Login" class="btn btn-primary w-100" />
            </div>
        }

        <div class="text-center">
            <p>Dont have an account!</p>
            @Html.ActionLink("Register", "Signup", "Home", null, new { @class = "btn btn-secondary w-100" })
        </div>
    </div>
</div>


